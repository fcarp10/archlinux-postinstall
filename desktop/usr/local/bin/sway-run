#!/bin/sh

export EDITOR=nvim
export VISUAL=nvim

# Session
export XDG_SESSION_TYPE=wayland
export XDG_SESSION_DESKTOP=sway
export XDG_CURRENT_DESKTOP=sway

# Wayland stuff
# export MOZ_ENABLE_WAYLAND=1
# export QT_QPA_PLATFORM=wayland
# export QT_QPA_PLATFORMTHEME=qt5ct
export WLR_DRM_NO_MODIFIERS=1
export CLUTTER_BACKEND=wayland
export SDL_VIDEODRIVER=wayland
export _JAVA_AWT_WM_NONREPARENTING=1


if id -u "vegito" >/dev/null 2>&1; then
  if [ -e "/dev/dri/card1" ]; then
  # echo "eGPU detected"
    if [ ! -z "$(udevadm info -a -n /dev/dri/card0 | grep i915)" ]; then
      intel="/dev/dri/card0"
      egpu="/dev/dri/card1"
    else
      intel="/dev/dri/card1"
      egpu="/dev/dri/card0"
    fi
    WLR_DRM_DEVICES="${egpu}:${intel}" sway --config .config/sway/setup_1
  else
    # echo "No eGPU detected"
    sway --config .config/sway/setup_1
  fi
elif id -u "vegeta" >/dev/null 2>&1; then
  sway --config .config/sway/setup_2
elif id -u "goku" >/dev/null 2>&1; then
  sway --config .config/sway/setup_1
else
  echo "no valid user found"
fi
